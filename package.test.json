{
  "name": "restaurant-management-api-tests",
  "version": "1.0.0",
  "description": "Comprehensive API testing suite for Restaurant Management System",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --ci --coverage --runInBand --watchAll=false",
    "test:menu": "jest tests/menu.test.ts --runInBand",
    "test:orders": "jest tests/orders.test.ts --runInBand",
    "test:inventory": "jest tests/inventory.test.ts --runInBand",
    "test:auth": "jest tests/auth.test.ts --runInBand",
    "test:admin": "jest tests/admin.test.ts --runInBand",
    "test:reports": "jest tests/reports.test.ts --runInBand",
    "test:integration": "jest tests/integration-flow.test.ts --runInBand",
    "test:security": "jest tests/security.test.ts --runInBand",
    "test:performance": "jest tests/performance-smoke.test.ts --runInBand",
    "test:websocket": "jest tests/notifications.test.ts --runInBand",
    "seed:test": "node tests/seed/seed.ts",
    "performance:artillery": "artillery run performance/artillery-orders.yaml",
    "performance:k6": "k6 run performance/k6-orders.js",
    "lint": "eslint tests/**/*.ts",
    "lint:fix": "eslint tests/**/*.ts --fix",
    "type-check": "tsc --noEmit --project tsconfig.test.json"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "@faker-js/faker": "^8.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "mongodb-memory-server": "^9.1.3",
    "ws": "^8.16.0",
    "artillery": "^2.0.0",
    "k6": "^0.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "api-testing",
    "restaurant-management",
    "jest",
    "typescript",
    "mongodb",
    "websocket",
    "performance-testing",
    "security-testing"
  ],
  "author": "Restaurant Management Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/restaurant-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/restaurant-management-system/issues"
  },
  "homepage": "https://github.com/your-org/restaurant-management-system#readme"
}